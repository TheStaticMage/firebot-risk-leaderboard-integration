{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES6",
        "module": "CommonJS",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "strict": true,
        "strictNullChecks": true
    },
    "include": ["./src/**/*", "max-without-null.test.ts", "max-without-null.ts"]
}
